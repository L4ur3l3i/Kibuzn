{% extends 'layout.html.twig' %}

{% block title %}Account index{% endblock %}

{% block content %}
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-8 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        
        <!-- Accounts List -->
        <div class="lg:col-span-3 lg:row-span-2 lg:row-end-2">
            <div>
                <div class="sm:flex sm:items-center">
                    <div class="sm:flex-auto">
                        <h1 class="text-base font-semibold leading-6 text-gray-900">Accounts</h1>
                        <p class="mt-2 text-sm text-gray-700">A list of all the accounts in your system.</p>
                    </div>
                    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
                        <a href="{{ path('app_account_new') }}" class="block rounded-md bg-violet-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600">Create new account</a>
                    </div>
                </div>

                <div class="mt-8 flow-root">
                    <div class="overflow-x-auto">
                        <div class="inline-block min-w-full align-middle">
                            <table class="min-w-full divide-y divide-gray-300">
                                <thead>
                                    <tr>
                                        <th scope="col" class="text-left text-sm font-semibold text-gray-900">Logo</th>
                                        <th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Name</th>
                                        <th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Default</th>
                                        <th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    {% for account in accounts %}
                                        <tr>
                                            <td>
                                                <img src="{{ asset(account.bank.logo) }}" alt="{{ account.name }}" class="w-12 h-12 rounded-md">
                                            </td>
                                            <td>{{ account.name }}</td>
                                            <td>{{ account.main ? 'Yes' : 'No' }}</td>
                                            <td>
                                                <a href="{{ path('app_account_show', {'id': account.id}) }}" class="text-violet-600 hover:text-violet-500">Show</a>
                                                <a href="{{ path('app_account_edit', {'id': account.id}) }}" class="ml-4 text-violet-600 hover:text-violet-500">Edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">No records found.</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
