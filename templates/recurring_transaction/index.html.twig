{% extends 'layout.html.twig' %}

{% block title %}RecurringTransaction index
{% endblock %}

{% block content %}

	<div
		class="mx-auto grid max-w-2xl grid-cols-1 grid-rows-1 items-start gap-x-8 gap-y-8 lg:mx-0 lg:max-w-none lg:grid-cols-3">

		<!-- Account summary -->
		<div class="lg:col-start-3 lg:row-end-1">
			<div class="rounded-lg bg-gray-50 shadow-sm ring-1 ring-gray-900/5">
				<dl class="flex flex-wrap">
					<div class="flex-auto pl-6 pt-6">
						<dt class="text-sm font-semibold leading-6 text-gray-900">October 2024 | Current balance</dt>
						<dd class="mt-1 text-base font-semibold leading-6 text-gray-900">560,25 €</dd>
					</div>
					<div class="mt-6 flex w-full flex-none gap-x-4 border-t border-gray-900/5 px-6 pt-6">
						<dt class="h-6 w-8 flex-none text-sm font-medium leading-6 text-gray-500">
							Start
						</dt>
						<dd class="text-sm font-medium leading-6 text-gray-500">1294,65 €</dd>
					</div>
					<div class="mt-4 flex w-full flex-none gap-x-4 px-6">
						<dt class="h-6 w-8 flex-none text-sm font-medium leading-6 text-gray-500">
							End
						</dt>
						<dd class="text-sm font-medium leading-6 text-gray-500">34,29 €</dd>
					</div>
					<div class="mt-4 flex w-full flex-none gap-x-4 px-6">
						<dt class="flex-none">
							<svg fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 h-6 w-8 text-gray-400">
								<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18 9 11.25l4.306 4.306a11.95 11.95 0 0 1 5.814-5.518l2.74-1.22m0 0-5.94-2.281m5.94 2.28-2.28 5.941"/>
							</svg>
						</dt>
						<dd class="text-sm leading-6 text-gray-500">
							<time datetime="2023-01-31">October 1st</time>
							<p class="text-sm font-medium leading-6 text-gray-500">1489,56 €</p>
						</dd>
					</div>
					<div class="mt-4 flex w-full flex-none gap-x-4 px-6">
						<dt class="flex-none">
							<svg fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 h-6 w-8 text-gray-400">
								<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6 9 12.75l4.286-4.286a11.948 11.948 0 0 1 4.306 6.43l.776 2.898m0 0 3.182-5.511m-3.182 5.51-5.511-3.181"/>
							</svg>
						</dt>
						<dd class="text-sm leading-6 text-gray-500">
							<time datetime="2023-01-31">October 24th</time>
							<p class="text-sm font-medium leading-6 text-gray-500">12,32 €</p>
						</dd>
					</div>
				</dl>
				<div class="mt-6 border-t border-gray-900/5 px-6 py-6">
					<a href="#" class="text-sm font-semibold leading-6 text-gray-900">Download statement</a>
					<span aria-hidden="true">&rarr;</span>
				</a>
			</div>
		</div>
	</div>

	<!-- Recurring transactions list -->
	<div
		class="lg:col-span-2 lg:row-span-2 lg:row-end-2">

		<!-- Transactions tabs -->
		<div>
			<div class="sm:hidden">
				<label for="tabs" class="sr-only">Select a tab</label>
				<!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
				<select id="tabs" name="tabs" class="block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500">
					<option>My Account</option>
					<option>Company</option>
					<option selected>Team Members</option>
					<option>Billing</option>
				</select>
			</div>
			<div class="hidden sm:block">
				<nav
					class="flex space-x-4 mb-8" aria-label="Tabs">
					<!-- Current: "bg-gray-100 text-gray-700", Default: "text-gray-500 hover:text-gray-700" -->
					<a href="{{ path('app_transaction_index') }}" class="rounded-md px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-700">Transactions</a>
					<a href="{{ path('app_recurring_transaction_index') }}" class="rounded-md bg-violet-100 px-3 py-2 text-sm font-medium text-gray-700" aria-current="page">Recurring transactions</a>
				</nav>
			</div>
		</div>

		<!-- List -->
		<div>
			<div class="sm:flex sm:items-center">
				<div class="sm:flex-auto">
					<h1 class="text-base font-semibold leading-6 text-gray-900">Recurring transactions</h1>
					<p class="mt-2 text-sm text-gray-700">A list of all recurring transactions.</p>
				</div>
				<div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
					<a href="{{ path('app_recurring_transaction_new') }}" class="block rounded-md bg-violet-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600">Add a recurring transaction</a>
				</div>
			</div>

			<div class="mt-8 flow-root">
				<div class="overflow-x-auto">
					<div class="inline-block min-w-full align-middle">
						<table class="min-w-full divide-y divide-gray-300">
							<thead>
								<tr>
									<th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Description</th>
									<th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Amount</th>
									<th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Started on</th>
									<th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Ends on</th>
									<th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Interval</th>
									<th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Status</th>
									<th scope="col" class="px-3 text-left text-sm font-semibold text-gray-900">Actions</th>
								</tr>
							</thead>
							<tbody class="divide-y divide-gray-200">
								{% for recurring_transaction in recurring_transactions %}
                                    {% include 'recurring_transaction/fragments/_index_row.html.twig' with {'recurring_transaction': recurring_transaction} %}
								{% else %}
									<tr>
										<td colspan="10" class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">No records found.</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
	</div>


